                    {
                        
                        <input asp-for="@extraProduct.ExtraProductId" type="checkbox"                       value="@extraProduct.ExtraProductId" />
                        @extraProduct.Name

                    } *@
                    
                </fieldset>
            </form>
        </section>
        <section>
            <h2>Patates Kızartması (Orta)</h2>
            <button>Sepete Ekle</button>
        </section>
        <section>
            <h2>Sos</h2>
            <button>Sepete Ekle</button>
        </section>
    </main>
