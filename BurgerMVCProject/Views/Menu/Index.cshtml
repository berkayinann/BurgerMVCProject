        <section>
            <h2>@Model.Description</h2>
        </section>
        <section>
            <h2>Tavukburger®</h2>
            <form asp-controller="Order" asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <fieldset>
                    <legend>Sandviç</legend>
                    <select asp-for="Quantity" asp-items="@GetQuantityOptions()">
                    </select>
                    <br>
