@using BurgerMVCProject.UI.Models.AccountModels
@model LoginVM
@{
    ViewData["Title"] = "Login Page";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div action="form-group">
        <div action="form-floating mb-3">
            <input asp-for="Email" class="form-control" placeholder="name@example.com">
            <label asp-for="Email" for="floatingInput">Email address</label>
        </div>
    </div>
    <div action="form-group">
        <div action="form-floating mb-3">
            <input asp-for="Password" class="form-control" placeholder="name@example.com">
            <label asp-for="Password" for="floatingInput">Password</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Log In</button>
</form>
